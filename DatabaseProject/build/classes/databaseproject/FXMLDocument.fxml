                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Price list">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="priceListLabel" layoutX="14.0" layoutY="14.0" text="Price list of components and systems:" />
                        <TextArea fx:id="priceListPageTA" layoutY="31.0" prefHeight="544.0" prefWidth="800.0" />
                        <Button fx:id="priceListButton" layoutX="231.0" layoutY="10.0" mnemonicParsing="false" onAction="#fetchPriceList" text="Fetch" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="Sales">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="salesPageLabel" layoutX="14.0" layoutY="14.0" text="Sales made:" />
                        <TextArea fx:id="salesPageTA" layoutY="31.0" prefHeight="544.0" prefWidth="800.0" />
                        <Button fx:id="salePageButton" layoutX="138.0" layoutY="10.0" mnemonicParsing="false" onAction="#fetchSales" text="Fetch" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
